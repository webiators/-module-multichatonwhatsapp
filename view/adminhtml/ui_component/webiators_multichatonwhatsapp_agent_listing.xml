         <item name="provider" xsi:type="string">webiators_multichatonwhatsapp_agent_listing.webiators_multichatonwhatsapp_agent_listing_data_source</item>
         <item name="deps" xsi:type="string">webiators_multichatonwhatsapp_agent_listing.webiators_multichatonwhatsapp_agent_listing_data_source</item>
      </item>
      <item name="spinner" xsi:type="string">multichatonwhatsapp_agent_columns</item>
